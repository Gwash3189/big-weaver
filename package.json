{
  "version": "0.0.2-1",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "bootstrap": "rm -rf ./node_modules; npm install; npm run build:local",
    "setup": "npm run bootstrap",
    "server": "npm run start",
    "update": "npm run bootstrap",
    "start": "tsdx watch",
    "build": "tsdx build && cp -a ./dist/. ./",
    "build:local": "tsdx build && cp -a ./dist/. ./ && npm run clean",
    "test": "tsdx test",
    "test:watch": "tsdx test --watch",
    "test:coverage": "npx tsdx test --coverage",
    "lint": "tsdx lint src/**/*.ts test/**/*.spec.ts",
    "lint:fix": "tsdx lint src/**/*.ts test/**/*.spec.ts --fix",
    "prepare": "npm run build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "clean": "npm run clean:files; npm run clean:action; npm run clean:auth; npm run clean:controller; npm run clean:db; npm run clean:request; npm run clean:facade",
    "clean:files": "rm -rf index.js nextjs-backend-helpers.* *.d.ts",
    "clean:facade": "rm -rf facade",
    "clean:action": "rm -rf action",
    "clean:auth": "rm -rf auth",
    "clean:db": "rm -rf db",
    "clean:request": "rm -rf request",
    "clean:controller": "rm -rf controllers"
  },
  "prettier": {
    "printWidth": 160,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "nextjs-backend-helpers",
  "author": "Adam Beck",
  "module": "dist/nextjs-backend-helpers.esm.js",
  "size-limit": [
    {
      "path": "dist/nextjs-backend-helpers.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/nextjs-backend-helpers.esm.js",
      "limit": "10 KB"
    }
  ],
  "dependencies": {
    "@prisma/client": "3.7.0",
    "@types/cookie": "^0.4.1",
    "@types/jsonwebtoken": "^8.5.8",
    "bcrypt": "^5.0.1",
    "cookie": "^0.4.2",
    "jsonwebtoken": "^8.5.1",
    "pino": "^7.10.0"
  },
  "peerDependencies": {
    "next": "12.0.x",
    "@prisma/client": "3.7.0"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "7.0.5",
    "@types/bcrypt": "^5.0.0",
    "next": "12.0.x",
    "np": "7.6.0",
    "pino-pretty": "^7.6.1",
    "prisma": "^3.14.0",
    "size-limit": "7.0.5",
    "tsdx": "0.14.1",
    "tslib": "2.3.1",
    "typescript": "4.5.4"
  }
}
